<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order"
    android:padding="20dp">

    <Button
        android:id="@+id/btnMyOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentEnd="true"
        android:onClick="onMyOrder"
        android:text="MyOrder"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_alignStart="@+id/photo"
        android:layout_alignEnd="@+id/photo"
        android:textAlignment="center"
        android:text="name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:textAlignment="center"
        android:text="price"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnDecrease"
        android:layout_alignBottom="@+id/btnDecrease"
        android:layout_toEndOf="@+id/btnDecrease"
        android:text="1"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnIncrease"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/order"
        android:layout_alignBottom="@+id/order"
        android:layout_toEndOf="@+id/order"
        android:text="+" />

    <Button
        android:id="@+id/btnDecrease"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/price"
        android:layout_alignStart="@+id/price"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:text="-" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIncrease"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:text="Add"
        android:textSize="20dp" />

</RelativeLayout>